<form method="get" action="/search">

    <label for="category"><b>Search By Category: </b></label>
    <select id="category" name="category">
        <option value="all">all</option>
        {% for category in categories %}
            <option value="{{ category }}">{{ category }}</option>
        {% endfor %}
    </select>

    <br/>

    <label for="sort"><b>Sort By: </b></label>
    <select id="sort" name="sort">
        <option value="created_at@DESC">Time Created</option>
        <option value="title@ASC">Title ASC</option>
        <option value="title@DESC">Title DESC</option>
        <option value="category@ASC">Category</option>
        <option value="quantity@ASC">Quantity ASC</option>
        <option value="quantity@DESC">Quantity DESC</option>
        <option value="edited_at@DESC">Time Edited</option>
    </select>

    <input type="submit" name="submit" class="submit" value="Search" />
</form>